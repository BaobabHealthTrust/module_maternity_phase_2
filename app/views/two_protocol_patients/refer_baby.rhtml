	tt_cancel_show = '/patients/show/<%= @patient.id %>?user_id=<%= session[:user_id] %>';
	tt_cancel_destination = '/patients/show/<%= @patient.id %>?user_id=<%= session[:user_id] %>';
	</script>

<form method='post' action='/encounters/create'>
	<input type='hidden' name='program' value='UNDER 5 PROGRAM' />
	<input type='hidden' name='encounter_type' value='REFERRAL ' />
	<input type='hidden' name='patient_id' value='<%= @patient.id %>' />
	<input type='hidden' name='user_id' value='<%= session[:user_id] %>' />
	<table>
		<tr>
			<td>
				Referral Type 
			</td>
			<td>
<select id='1.1.2' name='concept[Referral Type ]' helpText='Referral Type ' pos='1'  disabled='disabled' >
<option></option>
<option value='Internal Referral'>Internal Referral</option>
 <option value='Other Health Facility'>Other Health Facility</option>
 </select>
			</td>
		</tr>
		<tr>
			<td>
				Ward 
			</td>
			<td>
<select id='1.1.3' name='concept[Ward ]'  condition='__$("1.1.2").value.toLowerCase().trim() == "internal referral"'  pos='2'  helpText='Ward referred to?' >
<option></option>
<option value='Check Up'>Check Up</option>
 <option value='Immunization'>Immunization</option>
 <option value='EID'>EID</option>
 <option value='Kangaroo'>Kangaroo</option>
 <option value='Nursery'>Nursery</option>
 </select>
			</td>
		</tr>
		<tr>
			<td>
				Facility Referred To? 
			</td>
			<td>
<input type='text' id='1.1.4'   helpText='Facility Referred To? '  name='concept[CLINIC PATIENT WAS REFERRRED]'  condition='__$("1.1.2").value.toLowerCase().trim() == "other health facility"'  pos='3'  ajaxURL='/encounters/static_locations?search_string='  allowFreeText='true'  fieldtype='text' />
			</td>
		</tr>
		<tr>
			<td>
				Referral Out Date 
			</td>
			<td>
<input type='text' id='1.1.5'  name='concept[Referral Out Date ]'   pos='4'  field_type='date'  min='<%= (Date.today - 3.months)%>'  helpText='Date referred' />
			</td>
		</tr>
		<tr>
			<td>
				Referral Out Time 
			</td>
			<td>
<input type='text' id='1.1.6'  name='concept[Referral Out Time ]'   pos='5'  field_type='advancedTime'  helpText='Time referred' />
			</td>
		</tr>
		<tr>
			<td>
				Reason for referral 
			</td>
			<td>
<input type='text' id='1.1.7'  name='concept[Reason for referral ]' helpText='Reason for referral '  pos='6'  ajaxURL='/encounters/diagnoses?search_string=' />
			</td>
		</tr>
	</table>
</form>
